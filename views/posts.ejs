<link rel="stylesheet" href="/assets/index.css">

<a href="/new-post">new post!</a>
<div id="main">
    <div id="container">
        <% posts.forEach(function(post) { %>
        <div class="post">
            <div class="title"><%= post.titel %></div>
            <% if (post.imagePath){ %>
                <img src="<%= post.imagePath %>">
            <% }%>
            <p class="poster">Van: <%= post.poster %></p>
            <div id="attr-container">
                <p id="timestamp" class="attr"><%= post.timestamp %></p>
                <% if (post.intern == 1) { %>
                    <p id="intern" class="attr">intern</p>
                <% } else { %>
                    <p id="extern" class="attr">extern</p>
                <% } %>
                <a id="notion" class="attr" href="<%= post.notionLink %>" target="_blank">notion</a>
                <p id="werkveld" class="attr"><%= post.werkveld%></p>
            </div>
            
            <p><%= post.description %></p>
            
        </div>
    <% }); %>
    </div>
</div>