<a href="/">back!</a>

<form action="/create-post" method="get">
    <table>
        <tr>
            <th>Title</th>
            <th><input type="text" name="titel" placeholder="titel" required></th>
        </tr>
        <tr>
            <th>Description</th>
            <th><input type="text" name="description" placeholder="beschrijving" required></th>
        </tr>
        <tr>
            <th>Where From</th>
            <th>
                <input type="radio" name="intern" value="1" required>intern
                <input type="radio" name="intern" value="0" required>extern
            </th>
        </tr>
        <tr>
            <th>Image Path</th>
            <th>
                <input type="text" name="imagePath" placeholder="image path" required>
            </th>
        </tr>
        <tr>
            <th>Notion Link</th>
            <th>
                <input type="text" name="notionLink" placeholder="notion link" required>
            </th>
        </tr>
        <tr>
            <th>Original Poster</th>
            <th>
                <input type="text" name="poster" placeholder="poster" required>
            </th>
        </tr>
        <tr>
            <th>Field</th>
            <th><input type="text" name="werkveld" placeholder="Werkveld" required></th>
        </tr>
</table>
    <button type="submit">submit</button>
</form>
